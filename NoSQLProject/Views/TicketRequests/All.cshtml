@model List<NoSQLProject.Models.TicketRequest>

@{
    ViewData["Title"] = "All Ticket Requests";

    int nextOrder = ViewBag.SortOrder == -1 ? 1 : -1;
    string currentSortField = ViewBag.SortField ?? "UpdatedAt";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="requests-card">
        <h2 class="requests-title">Ticket Requests</h2>

        <!-- Tab Navigation -->
        <div class="tabs-container mb-4">
            <a href="/TicketRequests/Received" class="tab-link">Received</a>
            <a href="/TicketRequests/Sent" class="tab-link">Sent</a>
            <a href="/TicketRequests/All" class="tab-link active">All</a>
        </div>

        @if (Model == null || Model.Count == 0)
        {
            <div class="alert alert-info text-center fw-semibold mt-4">
                No requests found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center requests-table">
                    <thead class="table-gradient text-white">
                        <tr>
                            <th><a asp-action="All" asp-route-sortField="Sender" asp-route-sortOrder="@nextOrder" class="sort-link">Sender ↕</a></th>
                            <th><a asp-action="All" asp-route-sortField="Recipient" asp-route-sortOrder="@nextOrder" class="sort-link">Recipient ↕</a></th>
                            <th><a asp-action="All" asp-route-sortField="Ticket" asp-route-sortOrder="@nextOrder" class="sort-link">Ticket ↕</a></th>
                            <th><a asp-action="All" asp-route-sortField="Message" asp-route-sortOrder="@nextOrder" class="sort-link">Message ↕</a></th>
                            <th><a asp-action="All" asp-route-sortField="Status" asp-route-sortOrder="@nextOrder" class="sort-link">Status ↕</a></th>
                            <th><a asp-action="All" asp-route-sortField="CreatedAt" asp-route-sortOrder="@nextOrder" class="sort-link">Created ↕</a></th>
                            <th><a asp-action="All" asp-route-sortField="UpdatedAt" asp-route-sortOrder="@nextOrder" class="sort-link">Updated ↕</a></th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td class="sender-cell">@(request.Sender == null ? "???" : request.Sender.FullName)</td>
                                <td class="sender-cell">@(request.Recipient == null ? "???" : request.Recipient.FullName)</td>
                                <td class="ticket-cell">@NoSQLProject.Controllers.TicketRequestsController.CutString(50, request.Ticket.Title) </td>
                                <td class="message-cell">@NoSQLProject.Controllers.TicketRequestsController.CutString(50, request.Message) </td>
                                <td>
                                    <span class="status-badge status-@request.Status.ToString().ToLower()">
                                        @request.Status
                                    </span>
                                </td>
                                <td class="date-cell">@request.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="date-cell">@request.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <a href="/TicketRequests/View/@request.Id" class="btn btn-view">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>