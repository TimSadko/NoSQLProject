@model NoSQLProject.Models.TicketRequest

@{
    ViewData["Title"] = "Delete Request";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="delete-card">
        <h2 class="delete-title">Delete Ticket Request</h2>

        <p class="text-center mb-4">Are you sure you want to delete this request?</p>

        <div class="d-flex justify-content-between align-items-center">
            <a href="/TicketRequests/All" class="btn btn-back px-4 py-2">Cancel</a>

            <form action="/TicketRequests/Delete" method="post">
                <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                <button type="submit" class="btn btn-delete px-4 py-2">Delete</button>
            </form>
        </div>
    </div>
</div>