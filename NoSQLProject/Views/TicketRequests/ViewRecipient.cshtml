@model NoSQLProject.Models.TicketRequest

@{
    ViewData["Title"] = "View Request";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="request-card">
        <h2 class="request-title">Request View</h2>

        <partial name="~/Views/TicketRequests/_MainViewPart.cshtml" model="@Model" />

        <div class="form-group mb-3">
            <label class="form-label fw-semibold">Status</label>
            <input type="text" class="form-control info-input" value="@Model.Status.ToString()" readonly />
        </div>

        @if (Model.Status == TicketRequestStatus.Open)
        {
            <div class="mb-3">
                <label class="form-label fw-semibold">Actions</label>
            </div>

            <div class="d-flex gap-2 mb-3">
                <form action="/TicketRequests/ViewAccept" method="post" style="flex: 1;">
                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                    <button type="submit" class="btn btn-save w-100">Accept Request</button>
                </form>

                <form action="/TicketRequests/ViewReject" method="post" style="flex: 1;">
                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                    <button type="submit" class="btn btn-delete w-100">Reject Request</button>
                </form>
            </div>
        }
        else if (Model.Status == TicketRequestStatus.Accepted)
        {
            <div class="mb-3">
                <label class="form-label fw-semibold">Actions</label>
            </div>

            <div class="d-flex gap-2 mb-3">
                <a href="/TicketsServiceDesk/Edit/@Model.Ticket.Id" class="btn btn-view" style="flex: 1; text-align: center;">Go to Ticket</a>

                <form action="/TicketRequests/ViewFail" method="post" style="flex: 1;">
                    <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                    <button type="submit" class="btn btn-delete w-100">Fail Request</button>
                </form>
            </div>
        }

        <div class="text-center">
            <a href="/TicketRequests/Received" class="btn btn-back px-4 py-2">Go Back</a>
        </div>
    </div>
</div>