@using NoSQLProject.Controllers
@model List<NoSQLProject.Models.TicketRequest>

@{
    ViewData["Title"] = "Sent Requests";
}

<partial name="_ErrorMessage" />

<h1>Sent Ticket Requests:</h1>

<div>
    <lebel>Requests:</lebel>
    <a href="/TicketRequests/Received" class="not-selected-request-tab-link">Recieved</a> |
    <a href="/TicketRequests/Sent" class="selected-request-tab-link">Sent</a> |
    <a href="/TicketRequests/All" class="not-selected-request-tab-link">All</a>
</div>

@{
    if (Model.Count == 0)
    {
        <div>No requests sent yet</div>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Recipient</th>
                    <th>Sent At</th>
                    <th>Last Upadte</th>
                    <th>Message</th>
                    <th>Ticket</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (TicketRequest r in Model)
                    {
                        <tr>
                            <td>@(r.Recipient == null ? "???" : r.Recipient.FullName)</td>
                            <td>@r.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td>@r.UpdatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            <td>@TicketRequestsController.CutString(50, r.Message)</td>
                            <td>@TicketRequestsController.CutString(50, r.Ticket.Title)</td>
                            <td>@r.Status</td>
                            <td>
                                <div>
                                    <a href="/TicketRequests/View/@r.Id">View</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
}

<style>
    .selected-request-tab-link {
        text-decoration: underline;
    }

    .not-selected-request-tab-link {
        text-decoration: none;
    }
</style>