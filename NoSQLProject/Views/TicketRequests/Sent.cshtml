@model List<NoSQLProject.Models.TicketRequest>

@{
    ViewData["Title"] = "Sent Ticket Requests";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="requests-card">
        <h2 class="requests-title">Ticket Requests</h2>

        <!-- Tab Navigation -->
        <div class="tabs-container mb-4">
            <a href="/TicketRequests/Received" class="tab-link">Received</a>
            <a href="/TicketRequests/Sent" class="tab-link active">Sent</a>
            <a href="/TicketRequests/All" class="tab-link">All</a>
        </div>

        @if (Model == null || Model.Count == 0)
        {
            <div class="alert alert-info text-center fw-semibold mt-4">
                No sent requests yet.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center requests-table">
                    <thead class="table-gradient text-white">
                        <tr>
                            <th>Recipient</th>
                            <th>Ticket</th>
                            <th>Message</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var request in Model)
                        {
                            <tr>
                                <td class="sender-cell">@(request.Recipient == null ? "???" : request.Recipient.FullName)</td>
                                <td class="ticket-cell">
                                    @if (string.IsNullOrEmpty(request.Ticket?.Title))
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else if (request.Ticket.Title.Length > 50)
                                    {
                                        @(request.Ticket.Title.Substring(0, 50))
                                        
                                                        }
                                    else
                                    {
                                        @request.Ticket.Title
                                    }
                                </td>
                                <td class="message-cell">
                                    @if (string.IsNullOrEmpty(request.Message))
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                    else if (request.Message.Length > 50)
                                    {
                                        @(request.Message.Substring(0, 50))
                                        
                                                        }
                                    else
                                    {
                                        @request.Message
                                    }
                                </td>
                                <td>
                                    <span class="status-badge status-@request.Status.ToString().ToLower()">
                                        @request.Status
                                    </span>
                                </td>
                                <td class="date-cell">@request.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="date-cell">@request.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <a href="#" class="btn btn-view">View</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        font-family: 'Inter', sans-serif;
    }

    .requests-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 40px 50px;
        max-width: 1300px;
        margin: 40px auto;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .requests-title {
        font-size: 2rem;
        font-weight: 700;
        color: #4e54c8;
        text-align: center;
        margin-bottom: 1rem;
    }

    .tabs-container {
        display: flex;
        justify-content: center;
        gap: 1rem;
        border-bottom: 2px solid #e0e0e0;
        padding-bottom: 1rem;
    }

    .tab-link {
        padding: 8px 24px;
        border-radius: 8px;
        text-decoration: none;
        color: #666;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .tab-link:hover {
            background: #f3f4f6;
            color: #4e54c8;
        }

        .tab-link.active {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
            color: white;
            font-weight: 600;
        }

    .requests-table {
        border-collapse: separate;
        border-spacing: 0 12px;
    }

        .requests-table thead th {
            padding: 14px;
            font-weight: 600;
            white-space: nowrap;
        }

        .requests-table tbody tr {
            background: rgba(255, 255, 255, 0.85);
            transition: all 0.25s ease;
        }

            .requests-table tbody tr:hover {
                background: rgba(78, 84, 200, 0.1);
                transform: scale(1.01);
            }

        .requests-table tbody td {
            padding: 16px 12px;
            vertical-align: middle;
        }

    .table-gradient {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
    }

    .sender-cell {
        font-weight: 600;
        color: #333;
    }

    .ticket-cell,
    .message-cell {
        text-align: left;
        max-width: 250px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .date-cell {
        font-size: 0.9rem;
        color: #666;
        white-space: nowrap;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-open {
        background: #e3f2fd;
        color: #1976d2;
    }

    .status-accepted {
        background: #e8f5e9;
        color: #388e3c;
    }

    .status-rejected {
        background: #ffebee;
        color: #d32f2f;
    }

    .status-fulfilled {
        background: #f3e5f5;
        color: #7b1fa2;
    }

    .status-redirected {
        background: #fff9c4;
        color: #f57f17;
    }

    .status-failed {
        background: #fbe9e7;
        color: #bf360c;
    }

    .btn-view {
        background: #00bcd4;
        color: white;
        border-radius: 8px;
        font-weight: 600;
        padding: 8px 16px;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .btn-view:hover {
            background: #0097a7;
            color: white;
            transform: translateY(-2px);
        }

    .fade-in {
        opacity: 1;
        transform: translateY(0);
        transition: all 0.6s ease-in-out;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
