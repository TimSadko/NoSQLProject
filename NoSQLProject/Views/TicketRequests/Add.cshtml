@model NoSQLProject.Models.AddTicketRequestViewModel

@{
    ViewData["Title"] = "Add Ticket Request";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="request-card">
        <h2 class="request-title">Add Ticket Request</h2>

        <form action="/TicketRequests/Add" method="post" class="request-form">
            <input type="hidden" asp-for="TicketId" value="@Model.TicketId" />

            <div class="form-group mb-3">
                <label for="Email" class="form-label fw-semibold">Recipient Email</label>
                <input type="email"
                       asp-for="Email"
                       class="form-control form-control-lg"
                       placeholder="Enter service desk employee email"
                       required
                       value="@Model?.Email" />
                <small class="form-text text-muted">Email of the service desk employee who will receive this request</small>
            </div>

            <div class="form-group mb-4">
                <label for="Message" class="form-label fw-semibold">Message</label>
                <textarea asp-for="Message"
                          class="form-control form-control-lg"
                          rows="5"
                          placeholder="Add a message for the recipient (optional)">@Model?.Message</textarea>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="/TicketsServiceDesk/Edit/@Model.TicketId" class="btn btn-back px-4 py-2">Back to Ticket</a>
                <button type="submit" class="btn btn-send px-4 py-2">Send Request</button>
            </div>
        </form>
    </div>
</div>