@model NoSQLProject.Models.Ticket

@{
    ViewData["Title"] = "Add New Ticket";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="ticket-card shadow-lg">
        <h2 class="ticket-title">Add New Ticket</h2>

        <form action="/TicketsEmployee/Add" method="post" class="ticket-form">

            <div class="form-group mb-3">
                <label for="Title" class="form-label fw-semibold">Title</label>
                <input type="text"
                       id="Title"
                       name="Title"
                       class="form-control form-control-lg"
                       placeholder="Enter a descriptive title for your issue"
                       required
                       value="@Model?.Title" />
            </div>

            <div class="form-group mb-4">
                <label for="Description" class="form-label fw-semibold">Description</label>
                <textarea id="Description"
                          name="Description"
                          class="form-control form-control-lg"
                          rows="5"
                          placeholder="Describe your issue or request in detail..."
                          required>@Model?.Description</textarea>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="/TicketsEmployee/Index" class="btn btn-back px-4 py-2">Back to Tickets</a>
                <button type="submit" class="btn btn-add px-4 py-2">Create Ticket</button>
            </div>
        </form>
    </div>
</div>
