@model NoSQLProject.ViewModels.EmployeeTickets

@{
    ViewData["Title"] = "Tickets";
    string currentField = Context.Request.Query["sortField"];
    string currentOrder = Context.Request.Query["sortOrder"];
}

<div class="fade-in">
    <div class="tickets-card shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="tickets-title">My Tickets</h2>
            <a href="/TicketsEmployee/Add" class="btn btn-add px-4 py-2">+ Add New Ticket</a>
        </div>

        @if (Model.Tickets == null || !Model.Tickets.Any())
        {
            <div class="alert alert-info text-center fw-semibold mt-4">
                You don't have any tickets yet.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center tickets-table">
                    <thead class="table-gradient text-white">
                        <tr>
                            <!-- TITLE -->
                            <th>
                                <a href="?sortField=Title&sortOrder=@(currentOrder == "1" ? "-1" : "1")"
                                   class="sort-link @(currentField=="Title" ? "active-sort" : "")">
                                    Title @(currentField=="Title" ? (currentOrder=="1" ? "↑" : "↓") : "")
                                </a>
                            </th>

                            <!-- STATUS -->
                            <th>
                                <a href="?sortField=Status&sortOrder=@(currentOrder == "1" ? "-1" : "1")"
                                   class="sort-link @(currentField=="Status" ? "active-sort" : "")">
                                    Status @(currentField=="Status" ? (currentOrder=="1" ? "↑" : "↓") : "")
                                </a>
                            </th>

                            <!-- CREATED AT -->
                            <th>
                                <a href="?sortField=CreatedAt&sortOrder=@(currentOrder == "1" ? "-1" : "1")"
                                   class="sort-link @(currentField=="CreatedAt" ? "active-sort" : "")">
                                    Created @(currentField=="CreatedAt" ? (currentOrder=="1" ? "↑" : "↓") : "")
                                </a>
                            </th>

                            <!-- UPDATED AT -->
                            <th>
                                <a href="?sortField=UpdatedAt&sortOrder=@(currentOrder == "1" ? "-1" : "1")"
                                   class="sort-link @(currentField=="UpdatedAt" ? "active-sort" : "")">
                                    Updated @(currentField=="UpdatedAt" ? (currentOrder=="1" ? "↑" : "↓") : "")
                                </a>
                            </th>

                            <th>Created By</th>
                            <th>Logs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var ticket in Model.Tickets)
                        {
                            <tr>
                                <td class="ticket-title-cell">@ticket.Title</td>
                                <td>
                                    <span class="status-badge status-@ticket.Status.ToString().ToLower()">
                                        @ticket.Status
                                    </span>
                                </td>
                                <td class="date-cell">@ticket.CreatedAt.ToString("g")</td>
                                <td class="date-cell">@ticket.UpdatedAt.ToString("g")</td>
                                <td class="employee-cell">@Model.Employee.FirstName @Model.Employee.LastName</td>
                                <td>
                                    <span class="logs-badge">@ticket.Logs.Count</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/TicketsEmployee/Edit/@ticket.Id" class="btn btn-edit">Edit</a>
                                        <a href="/TicketsEmployee/Delete/@ticket.Id" class="btn btn-delete">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- 🔥 SORT DEBUG -->
<script>
    console.log("===== SORT DEBUG (CLIENT) =====");
    console.log("SortField = '@currentField'");
    console.log("SortOrder = '@currentOrder'");
    console.log("First ticket = '@(Model.Tickets.FirstOrDefault()?.Title ?? "NONE")'");
    console.log("================================");
</script>

<style>
    body {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        font-family: 'Inter', sans-serif;
    }

    .tickets-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 40px 50px;
        max-width: 1100px;
        margin: 40px auto;
    }

    .tickets-title {
        font-size: 2rem;
        font-weight: 700;
        color: #4e54c8;
    }

    .btn-add {
        background: linear-gradient(135deg, #2575fc, #6a11cb);
        color: white;
        font-weight: 600;
        border-radius: 12px;
        padding: 10px 20px;
        text-decoration: none;
        transition: all 0.2s;
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(37,117,252,0.3);
    }

    .table-gradient {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
    }

    /* SORT LINK FIXES */
    .sort-link {
        color: #ffffff;
        font-weight: 700;
        text-decoration: none;
        transition: 0.2s;
    }

    .sort-link:hover {
        color: #ffeb3b; /* bright yellow */
        text-decoration: underline;
        font-weight: 800;
    }

    .active-sort {
        color: #ffeb3b !important;
        font-weight: 800 !important;
        text-decoration: underline;
    }

    .ticket-title-cell {
        font-weight: 600;
        color: #333;
        text-align: left;
        max-width: 250px;
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .date-cell {
        font-size: 0.9rem;
        color: #666;
    }

    .employee-cell {
        font-weight: 500;
        color: #555;
    }

    .logs-badge {
        background: #eef2ff;
        color: #4e54c8;
        padding: 6px 12px;
        border-radius: 12px;
        font-weight: 600;
    }

    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-open { background: #e3f2fd; color: #1976d2; }
    .status-closed { background: #f3e5f5; color: #7b1fa2; }
    .status-resolved { background: #e8f5e9; color: #388e3c; }

    .btn-edit {
        background: #00bcd4;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
    }

    .btn-delete {
        background: #ef5350;
        color: white;
        padding: 8px 16px;
        border-radius: 8px;
        text-decoration: none;
    }
</style>
