@model NoSQLProject.ViewModels.EmployeeTickets

@{
    ViewData["Title"] = "Tickets";
    int nextOrder = ViewBag.SortOrder == -1 ? 1 : -1;
    string currentField = Context.Request.Query["sortField"];
    string currentOrder = Context.Request.Query["sortOrder"];
}

<div class="fade-in">
    <div class="tickets-card shadow-lg">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="tickets-title">My Tickets</h2>
            <a href="/TicketsEmployee/Add" class="btn btn-add px-4 py-2">+ Add New Ticket</a>
        </div>

        @if (Model.Tickets == null || !Model.Tickets.Any())
        {
            <div class="alert alert-info text-center fw-semibold mt-4">
                You don't have any tickets yet.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center tickets-table">
                    <thead class="table-gradient text-white">
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Priority" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Priority ↕
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Title" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Title ↕
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Status" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Status ↕
                                </a>
                            <th>
                                <a asp-action="Index" asp-route-sortField="CreatedAt" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Created ↕
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="UpdatedAt" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Updated ↕
                                </a>
                            </th>

                            <th>Created By</th>
                            <th>Logs</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var ticket in Model.Tickets)
                        {
                            <tr>
                                <td>
                                    @{
                                        var priorityClass = ticket.Priority switch
                                        {
                                            Ticket_Priority.Critical => "priority-critical",
                                            Ticket_Priority.High => "priority-high",
                                            Ticket_Priority.Medium => "priority-medium",
                                            Ticket_Priority.Low => "priority-low",
                                            Ticket_Priority.Undefined => "priority-undefined",
                                            _ => "priority-undefined"
                                        };

                                    }
                                    <span class="priority-badge @priorityClass">
                                        @ticket.Priority
                                    </span>
                                </td>
                                <td class="ticket-title-cell">@ticket.Title</td>
                                <td>
                                    <span class="status-badge status-@ticket.Status.ToString().ToLower()">
                                        @ticket.Status
                                    </span>
                                </td>
                                <td class="date-cell">@ticket.CreatedAt.ToString("g")</td>
                                <td class="date-cell">@ticket.UpdatedAt.ToString("g")</td>
                                <td class="employee-cell">@Model.Employee.FirstName @Model.Employee.LastName</td>
                                <td>
                                    <span class="logs-badge">@ticket.Logs.Count</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/TicketsEmployee/Edit/@ticket.Id" class="btn btn-edit">Edit</a>
                                        <a href="/TicketsEmployee/Archive/@ticket.Id" class="btn btn-delete">Archive</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
