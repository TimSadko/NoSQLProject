@model NoSQLProject.Models.Ticket

@{
    ViewData["Title"] = "Edit Ticket";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="ticket-edit-card">
        <h2 class="ticket-title">Edit Ticket</h2>

        <div class="info-section mb-4">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="info-label">Created By</label>
                    <input type="text" class="form-control info-input" readonly value="@(Model.Creator == null ? "???" : Model.Creator.FullName)" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="info-label">Created At</label>
                    <input type="text" class="form-control info-input" readonly value="@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label class="info-label">Last Update</label>
                    <input type="text" class="form-control info-input" readonly value="@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm:ss")" />
                </div>
            </div>
        </div>

        <form action="/TicketsServiceDesk/Edit" method="post" class="ticket-form">
            <input type="hidden" asp-for="Id" value="@Model.Id" />

            <div class="form-group mb-3">
                <label for="Title" class="form-label fw-semibold">Title</label>
                <input type="text" class="form-control form-control-lg" asp-for="Title" required value="@Model?.Title" />
            </div>

            <div class="form-group mb-3">
                <label for="Description" class="form-label fw-semibold">Description</label>
                <textarea class="form-control form-control-lg" asp-for="Description" rows="4" required>@Model?.Description</textarea>
            </div>

            <div class="col-md-6 mb-3">
                <label for="Priority" class="form-label fw-semibold">Priority</label>
                <select class="form-select form-select-lg" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Ticket_Priority>()"></select>
            </div>

            <div class="mb-3">
                <a href="/TicketRequests/Add/@Model.Id" class="btn btn-request px-4 py-2">Add Ticket Request</a>
            </div>

            <div class="d-flex justify-content-between mb-4">
                <a href="/TicketsServiceDesk/Index" class="btn btn-back px-4 py-2">Back to List</a>
                <button type="submit" class="btn btn-save px-4 py-2">Save Changes</button>
            </div>
        </form>

        <div class="logs-section">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 class="logs-title">Activity Logs</h3>
                <a href="/TicketsServiceDesk/AddLog/@Model.Id" class="btn btn-add-log">Add Log</a>
            </div>

            @if (Model.Logs.Count == 0)
            {
                <div class="alert alert-info text-center">
                    No logs yet. Add one to track changes!
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table logs-table">
                        <thead>
                            <tr>
                                <th>Created By</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Log log in Model.Logs)
                            {
                                <tr>
                                    <td class="fw-semibold">@(log.Creator == null ? "???" : log.Creator.FullName)</td>
                                    <td class="date-cell">@log.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                    <td>
                                        <span class="status-badge status-@log.NewStatus.ToString().ToLower()">
                                            @log.NewStatus
                                        </span>
                                    </td>
                                    <td class="description-cell">@NoSQLProject.Controllers.TicketRequestsController.CutString(100, log.Description)</td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="/TicketsServiceDesk/EditLog/@(Model.Id)/@(log.Id)" class="btn-action btn-edit-sm">Edit</a>
                                            <a href="/TicketsServiceDesk/DeleteLog/@(Model.Id)/@(log.Id)" class="btn-action btn-delete-sm">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>