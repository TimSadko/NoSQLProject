@model LogViewModel

@{
    ViewData["Title"] = "Delete Log";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="delete-log-card">
        <h2 class="delete-title">Delete Log</h2>

        <div class="alert alert-danger text-center fw-semibold mb-4">
             Are you sure you want to permanently delete this log entry?
        </div>

        <!-- Log Details -->
        <div class="log-details">
            <div class="detail-row">
                <span class="detail-label">Created By:</span>
                <span class="detail-value">@Model.Log.Creator.FullName</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Created At:</span>
                <span class="detail-value">@Model.Log.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Status Change:</span>
                <span class="detail-value">
                    <span class="status-badge status-@Model.Log.NewStatus.ToString().ToLower()">
                        @Model.Log.NewStatus
                    </span>
                </span>
            </div>
            <div class="detail-row description-row">
                <span class="detail-label">Description:</span>
                <span class="detail-value description-content">
                    @if (string.IsNullOrEmpty(Model.Log.Description))
                    {
                        <span class="text-muted">No description provided</span>
                    }
                    else
                    {
                        @Model.Log.Description
                    }
                </span>
            </div>
        </div>

        <!-- Delete Form -->
        <form action="/TicketsServiceDesk/DeleteLog" method="post">
            <input type="hidden" asp-for="@Model.Ticket.Id" value="@Model.Ticket.Id" />
            <input type="hidden" asp-for="@Model.Log.Id" value="@Model.Log.Id" />

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a href="/TicketsServiceDesk/Edit/@Model.Ticket.Id" class="btn btn-cancel px-4 py-2">Cancel</a>
                <button type="submit" class="btn btn-delete px-4 py-2">Delete Log</button>
            </div>
        </form>
    </div>
</div>
