@model LogViewModel

@{
    ViewData["Title"] = "Edit Log";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="log-card">
        <h2 class="log-title">Edit Log</h2>

        <!-- Log Info Section -->
        <div class="info-section mb-4">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="info-label">Created By</label>
                    <input type="text" class="form-control info-input" readonly value="@Model.Log.Creator.FullName" />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="info-label">Created At</label>
                    <input type="text" class="form-control info-input" readonly value="@Model.Log.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")" />
                </div>
            </div>
        </div>

        <!-- Edit Form -->
        <form action="/TicketsServiceDesk/EditLog" method="post" class="log-form">
            <input type="hidden" asp-for="@Model.Ticket.Id" value="@Model.Ticket.Id" />
            <input type="hidden" asp-for="@Model.Ticket.Status" value="@Model.Ticket.Status" />
            <input type="hidden" asp-for="@Model.Log.Id" value="@Model.Log.Id" />
            <input type="hidden" asp-for="@Model.Log.CreatedById" value="@Model.Log.CreatedById" />
            <input type="hidden" asp-for="@Model.Log.CreatedAt" value="@Model.Log.CreatedAt" />

            <div class="form-group mb-3">
                <label for="Description" class="form-label fw-semibold">Description</label>
                <textarea class="form-control form-control-lg"
                          asp-for="@Model.Log.Description"
                          rows="5"
                          placeholder="Describe what was done or changed..."
                          required>@Model.Log.Description</textarea>
            </div>

            <div class="form-group mb-4">
                <label for="NewStatus" class="form-label fw-semibold">Status Change</label>
                <select id="NewStatus"
                        asp-for="@Model.Log.NewStatus"
                        class="form-select form-select-lg"
                        asp-items="@Html.GetEnumSelectList<Ticket_Status>()"
                        required></select>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="/TicketsServiceDesk/Edit/@Model.Ticket.Id" class="btn btn-back px-4 py-2">← Back to Ticket</a>
                <button type="submit" class="btn btn-save px-4 py-2">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        font-family: 'Inter', sans-serif;
    }

    .log-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 40px 50px;
        max-width: 700px;
        margin: 40px auto;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .log-title {
        font-size: 2rem;
        font-weight: 700;
        color: #4e54c8;
        text-align: center;
        margin-bottom: 2rem;
    }

    .info-section {
        background: #f8f9fa;
        border-radius: 12px;
        padding: 20px;
    }

    .info-label {
        font-weight: 600;
        color: #666;
        font-size: 0.85rem;
        margin-bottom: 6px;
    }

    .info-input {
        background: white;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 8px 12px;
        font-size: 0.95rem;
        color: #333;
    }

    .log-form .form-label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
    }

    .log-form .form-control,
    .log-form .form-select {
        border-radius: 12px;
        border: 1px solid #ddd;
        padding: 12px 16px;
        transition: all 0.3s ease;
    }

        .log-form .form-control:focus,
        .log-form .form-select:focus {
            border-color: #4e54c8;
            box-shadow: 0 0 0 3px rgba(78, 84, 200, 0.15);
            outline: none;
        }

    .log-form textarea.form-control {
        resize: vertical;
        min-height: 120px;
    }

    .btn-save {
        background: linear-gradient(135deg, #2575fc, #6a11cb);
        color: white;
        font-weight: 600;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(37, 117, 252, 0.4);
            color: white;
        }

    .btn-back {
        background: #f3f4f6;
        color: #333;
        font-weight: 500;
        border: none;
        border-radius: 12px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-back:hover {
            background: #e0e7ff;
            color: #4e54c8;
            transform: translateY(-2px);
        }

    .fade-in {
        opacity: 1;
        transform: translateY(0);
        transition: all 0.6s ease-in-out;
    }

    .form-control::placeholder {
        color: #999;
        font-style: italic;
    }
</style>