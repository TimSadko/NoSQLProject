@model SDETickestsListViewModel

@{
    ViewData["Title"] = "Tickets (Service Desk)";
}

<partial name="_ErrorMessage" />

<h1>Tickets (Service Desk)</h1>
<a href="/TicketsServiceDesk/Add" class="btn btn-primary mb-2">Add new Ticket</a>

<!-- ✅ Sorting links for ticket fields -->
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a href="?sortField=Title&sortOrder=1">Title ↑</a> |
                <a href="?sortField=Title&sortOrder=-1">↓</a>
            </th>
            <th>
                <a href="?sortField=Status&sortOrder=1">Status ↑</a> |
                <a href="?sortField=Status&sortOrder=-1">↓</a>
            </th>
            <th>
                <a href="?sortField=CreatedAt&sortOrder=-1">Created ↓</a>
            </th>
            <th>
                <a href="?sortField=UpdatedAt&sortOrder=-1">Updated ↓</a>
            </th>
            <th>Created By</th>
            <th>Logs</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @for(int i = 0; i < Model.Tickets.Count; i++)
        {
            var t = Model.Tickets[i];

            <tr>
                <td>@t.Title</td>
                <td>@t.Status</td>
                <td>@t.CreatedAt.ToString("g")</td>
                <td>@t.UpdatedAt.ToString("g")</td>
                <td>@(Model.Employees[i] == null ? "???" : Model.Employees[i].FullName)</td>
                <td>@t.Logs?.Count</td>
                <td>
                    <a href="/TicketsServiceDesk/Edit/@t.Id" class="btn btn-sm btn-outline-info">View</a>
                    <a href="/TicketsServiceDesk/Delete/@t.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

