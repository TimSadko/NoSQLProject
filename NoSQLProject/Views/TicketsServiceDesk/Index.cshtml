@model List<Ticket>

@{
    ViewData["Title"] = "Tickets (Service Desk)";
    int nextOrder = ViewBag.SortOrder == -1 ? 1 : -1;
    string currentSortField = ViewBag.SortField ?? "Priority";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="tickets-card">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="tickets-title">Service Desk Tickets</h2>
            <a href="/TicketsServiceDesk/Add" class="btn btn-add">Add New Ticket</a>
        </div>

        @if (Model == null)
        {
            <div class="alert alert-info text-center fw-semibold mt-4">
                No tickets found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center tickets-table">
                    <thead class="table-gradient text-white">
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Priority" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Priority @(currentSortField == "Priority" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Title" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Title @(currentSortField == "Title" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Status" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Status @(currentSortField == "Status" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="CreatedAt" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Created @(currentSortField == "CreatedAt" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="UpdatedAt" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Updated @(currentSortField == "UpdatedAt" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="CreatedBy" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Created By @(currentSortField == "CreatedBy" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="LogsNumber" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Logs @(currentSortField == "LogsNumber" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Ticket t in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        var priorityClass = t.Priority switch
                                        {
                                            Ticket_Priority.Critical => "priority-critical",
                                            Ticket_Priority.High => "priority-high",
                                            Ticket_Priority.Medium => "priority-medium",
                                            Ticket_Priority.Low => "priority-low",
                                            Ticket_Priority.Undefined => "priority-undefined",
                                            _ => "priority-undefined"
                                        };
                                        var priorityIcon = t.Priority switch
                                        {
                                            Ticket_Priority.Critical => "🔴",
                                            Ticket_Priority.High => "🟠",
                                            Ticket_Priority.Medium => "🟡",
                                            Ticket_Priority.Low => "🟢",
                                            Ticket_Priority.Undefined => "⚪",
                                            _ => "⚪"
                                        };
                                    }
                                    <span class="priority-badge @priorityClass">
                                        @priorityIcon @t.Priority
                                    </span>
                                </td>
                                <td class="ticket-title-cell">@t.Title</td>
                                <td>
                                    <span class="status-badge status-@t.Status.ToString().ToLower()">
                                        @t.Status
                                    </span>
                                </td>
                                <td class="date-cell">@t.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                <td class="date-cell">@t.UpdatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                <td class="employee-cell">@(t.Creator == null ? "???" : t.Creator.FullName)</td>
                                <td>
                                    <span class="logs-badge">@t.Logs?.Count</span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/TicketsServiceDesk/Edit/@t.Id" class="btn btn-view">View</a>
                                        <a href="/TicketsServiceDesk/Delete/@t.Id" class="btn btn-delete">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        font-family: 'Inter', sans-serif;
    }

    .tickets-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 40px 50px;
        max-width: 1300px;
        margin: 40px auto;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .tickets-title {
        font-size: 2rem;
        font-weight: 700;
        color: #4e54c8;
    }

    .btn-add {
        background: linear-gradient(135deg, #2575fc, #6a11cb);
        color: white;
        font-weight: 600;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(37, 117, 252, 0.3);
            color: white;
        }

    .tickets-table {
        border-collapse: separate;
        border-spacing: 0 12px;
    }

        .tickets-table thead th {
            padding: 14px;
            font-weight: 600;
            white-space: nowrap;
        }

        .tickets-table tbody tr {
            background: rgba(255, 255, 255, 0.85);
            transition: all 0.25s ease;
        }

            .tickets-table tbody tr:hover {
                background: rgba(78, 84, 200, 0.1);
                transform: scale(1.01);
            }

        .tickets-table tbody td {
            padding: 16px 12px;
            vertical-align: middle;
        }

    .table-gradient {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
    }

    .ticket-title-cell {
        font-weight: 600;
        color: #333;
        text-align: left;
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .date-cell {
        font-size: 0.9rem;
        color: #666;
        white-space: nowrap;
    }

    .employee-cell {
        font-weight: 500;
        color: #555;
    }

    /* ✅ UPDATED: Priority Badge Styles with Undefined */
    .priority-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 16px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .priority-critical {
        background: #ffebee;
        color: #c62828;
        border: 1px solid #ef5350;
    }

    .priority-high {
        background: #fff3e0;
        color: #e65100;
        border: 1px solid #ff9800;
    }

    .priority-medium {
        background: #fff9c4;
        color: #f57f17;
        border: 1px solid #fbc02d;
    }

    .priority-low {
        background: #e8f5e9;
        color: #2e7d32;
        border: 1px solid #66bb6a;
    }

    /* ✅ NEW: Undefined priority styling */
    .priority-undefined {
        background: #f5f5f5;
        color: #757575;
        border: 1px solid #bdbdbd;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-open {
        background: #e3f2fd;
        color: #1976d2;
    }

    .status-closed {
        background: #f3e5f5;
        color: #7b1fa2;
    }

    .status-resolved {
        background: #e8f5e9;
        color: #388e3c;
    }

    .logs-badge {
        display: inline-block;
        background: #f3f4f6;
        color: #4e54c8;
        font-weight: 600;
        padding: 6px 12px;
        border-radius: 12px;
        font-size: 0.9rem;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
        justify-content: center;
        align-items: center;
    }

    .btn-view {
        background: #00bcd4;
        color: white;
        border-radius: 8px;
        font-weight: 600;
        padding: 8px 16px;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .btn-view:hover {
            background: #0097a7;
            color: white;
            transform: translateY(-2px);
        }

    .btn-delete {
        background: #ef5350;
        color: white;
        border-radius: 8px;
        font-weight: 600;
        padding: 8px 16px;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        font-size: 0.9rem;
    }

        .btn-delete:hover {
            background: #d32f2f;
            color: white;
            transform: translateY(-2px);
        }

    .sort-link {
        color: white;
        font-weight: 600;
        text-decoration: none;
        transition: opacity 0.2s ease;
    }

        .sort-link:hover {
            opacity: 0.8;
            text-decoration: underline;
        }

    .fade-in {
        opacity: 1;
        transform: translateY(0);
        transition: all 0.6s ease-in-out;
    }

    .table-responsive {
        overflow-x: auto;
    }
</style>
