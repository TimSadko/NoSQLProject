@model List<Ticket>

@{
    ViewData["Title"] = "Tickets (Service Desk)";
    int nextOrder = ViewBag.SortOrder == -1 ? 1 : -1;
    string currentSortField = ViewBag.SortField ?? "Priority";
}

<!-- ✅ Feedback messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success fade-in-alert">
        @TempData["Success"]
    </div>
}
@if (TempData["Exception"] != null)
{
    <div class="alert alert-danger fade-in-alert">
        @TempData["Exception"]
    </div>
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="tickets-card">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="tickets-title">Service Desk Tickets</h2>
            <a href="/TicketsServiceDesk/Add" class="btn btn-add">Add New Ticket</a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center fw-semibold mt-4">
                No tickets found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center tickets-table">
                    <thead class="table-gradient text-white">
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Priority" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Priority @(currentSortField == "Priority" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Title" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Title @(currentSortField == "Title" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Status" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Status @(currentSortField == "Status" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="CreatedAt" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Created @(currentSortField == "CreatedAt" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="UpdatedAt" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Updated @(currentSortField == "UpdatedAt" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="CreatedBy" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Created By @(currentSortField == "CreatedBy" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="LogsNumber" asp-route-sortOrder="@nextOrder" class="sort-link">
                                    Logs @(currentSortField == "LogsNumber" ? (ViewBag.SortOrder == -1 ? "↓" : "↑") : "")
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Ticket t in Model)
                        {
                            <tr>
                                <td>
                                    @{
                                        var priorityClass = t.Priority switch
                                        {
                                            Ticket_Priority.Critical => "priority-critical",
                                            Ticket_Priority.High => "priority-high",
                                            Ticket_Priority.Medium => "priority-medium",
                                            Ticket_Priority.Low => "priority-low",
                                            _ => "priority-undefined"
                                        };
                                    }
                                    <span class="priority-badge @priorityClass">@t.Priority</span>
                                </td>
                                <td class="ticket-title-cell">@t.Title</td>
                                <td>
                                    <span class="status-badge status-@t.Status.ToString().ToLower()">@t.Status</span>
                                </td>
                                <td class="date-cell">@t.CreatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                <td class="date-cell">@t.UpdatedAt.ToString("dd.MM.yyyy HH:mm:ss")</td>
                                <td class="employee-cell">@(t.Creator == null ? "???" : t.Creator.FullName)</td>
                                <td><span class="logs-badge">@t.Logs?.Count</span></td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/TicketsServiceDesk/Edit/@t.Id" class="btn btn-view">View</a>
                                        <a href="/TicketsServiceDesk/Delete/@t.Id" class="btn btn-delete">Delete</a>
                                        <div class="status-actions">
                                            <form asp-action="UpdateStatus" asp-controller="TicketsServiceDesk" method="post">
                                                <input type="hidden" name="id" value="@t.Id" />
                                                <input type="hidden" name="actionType" value="escalate" />
                                                <button type="submit" class="btn btn-escalate">Escalate</button>
                                            </form>
                                            <form asp-action="UpdateStatus" asp-controller="TicketsServiceDesk" method="post">
                                                <input type="hidden" name="id" value="@t.Id" />
                                                <input type="hidden" name="actionType" value="close" />
                                                <button type="submit" class="btn btn-close">Close</button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #4e54c8, #8f94fb);
        font-family: 'Inter', sans-serif;
    }

    .tickets-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 40px 50px;
        max-width: 1300px;
        margin: 40px auto;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }

    .tickets-title {
        font-size: 2rem;
        font-weight: 700;
        color: #4e54c8;
    }

    .btn-add {
        background: linear-gradient(135deg, #2575fc, #6a11cb);
        color: white;
        font-weight: 600;
        border: none;
        border-radius: 12px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-add:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(37, 117, 252, 0.3);
        color: white;
    }

    .fade-in-alert {
        animation: fadeInSlide 0.6s ease forwards;
        text-align: center;
        font-weight: 600;
        border-radius: 10px;
        margin: 15px auto;
        width: 90%;
        max-width: 800px;
    }

    @@keyframes fadeInSlide {
        0% { opacity: 0; transform: translateY(-10px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    .alert-success {
        background: #e8f5e9;
        color: #2e7d32;
        border: 1px solid #66bb6a;
        padding: 12px 20px;
    }

    .alert-danger {
        background: #ffebee;
        color: #c62828;
        border: 1px solid #ef5350;
        padding: 12px 20px;
    }

    .tickets-table {
        border-collapse: separate;
        border-spacing: 0 12px;
    }

    .tickets-table tbody tr {
        background: rgba(255, 255, 255, 0.85);
        transition: all 0.25s ease;
    }

    .tickets-table tbody tr:hover {
        background: rgba(78, 84, 200, 0.1);
        transform: scale(1.01);
    }

    .priority-badge, .status-badge, .logs-badge {
        font-weight: 600;
        font-size: 0.85rem;
    }

    .priority-critical { background: #ffebee; color: #c62828; border: 1px solid #ef5350; }
    .priority-high { background: #fff3e0; color: #e65100; border: 1px solid #ff9800; }
    .priority-medium { background: #fff9c4; color: #f57f17; border: 1px solid #fbc02d; }
    .priority-low { background: #e8f5e9; color: #2e7d32; border: 1px solid #66bb6a; }

    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        justify-content: center;
    }

    .status-actions {
        display: flex;
        gap: 8px;
        justify-content: center;
    }

    /* --- Simplified Action Buttons --- */
    .btn-view, .btn-delete, .btn-escalate, .btn-close {
        border: none;
        border-radius: 8px;
        font-weight: 600;
        padding: 8px 16px;
        font-size: 0.85rem;
        color: white;
        cursor: pointer;
        transition: background 0.25s ease, transform 0.1s ease;
    }

    .btn-view { background: #00bcd4; }
    .btn-view:hover { background: #0097a7; }

    .btn-delete { background: #e74c3c; }
    .btn-delete:hover { background: #c0392b; }

    .btn-escalate { background: #f39c12; }
    .btn-escalate:hover { background: #e67e22; }

    .btn-close { background: #2ecc71; }
    .btn-close:hover { background: #27ae60; }
</style>
