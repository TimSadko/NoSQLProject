@model List<NoSQLProject.Models.Employee>

@{
    ViewData["Title"] = "Employees";
    int nextOrder = ViewBag.SortOrder == 1 ? -1 : 1;
    string currentSortField = ViewBag.SortField ?? "Status";
    string currentStatus = ViewBag.Status ?? "All";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="tickets-card">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="tickets-title">Employees</h2>
            <a asp-action="Add" class="btn-add px-4 py-2">+ Add Employee</a>
        </div>

        <!-- Status Filter -->
        <div class="filter-buttons">
            <a asp-action="Index" asp-route-status="All" asp-route-sortField="@currentSortField" asp-route-sortOrder="@ViewBag.SortOrder"
               class="btn @(currentStatus == "All" ? "btn-primary" : "btn-outline-primary")">All</a>
            <a asp-action="Index" asp-route-status="Active" asp-route-sortField="@currentSortField" asp-route-sortOrder="@ViewBag.SortOrder"
               class="btn @(currentStatus == "Active" ? "btn-success" : "btn-outline-success")">Active</a>
            <a asp-action="Index" asp-route-status="Deactivated" asp-route-sortField="@currentSortField" asp-route-sortOrder="@ViewBag.SortOrder"
               class="btn @(currentStatus == "Deactivated" ? "btn-warning" : "btn-outline-warning")">Deactivated</a>
            <a asp-action="Index" asp-route-status="Archived" asp-route-sortField="@currentSortField" asp-route-sortOrder="@ViewBag.SortOrder"
               class="btn @(currentStatus == "Archived" ? "btn-secondary" : "btn-outline-secondary")">Archived</a>
        </div>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center fw-semibold mt-4">
                No employees found.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center tickets-table">
                    <thead class="table-gradient text-white">
                        <tr>
                            <th>
                                <a asp-action="Index" asp-route-sortField="FirstName" asp-route-sortOrder="@nextOrder" asp-route-status="@currentStatus" class="sort-link">
                                    First Name ↕
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="LastName" asp-route-sortOrder="@nextOrder" asp-route-status="@currentStatus" class="sort-link">
                                    Last Name ↕
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Email" asp-route-sortOrder="@nextOrder" asp-route-status="@currentStatus" class="sort-link">
                                    Email ↕
                                </a>
                            </th>
                            <th>
                                <a asp-action="Index" asp-route-sortField="Status" asp-route-sortOrder="@nextOrder" asp-route-status="@currentStatus" class="sort-link">
                                    Status ↕
                                </a>
                            </th>
                            <th>Role</th>
                            <th>Managing</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var emp in Model)
                        {
                            <tr>
                                <td class="employee-cell">@emp.FirstName</td>
                                <td class="employee-cell">@emp.LastName</td>
                                <td>@emp.Email</td>
                                <td>
                                    @{
                                        var statusClass = emp.Status switch
                                        {
                                            NoSQLProject.Models.Employee_Status.Active => "status-resolved",
                                            NoSQLProject.Models.Employee_Status.Deactivated => "status-open",
                                            NoSQLProject.Models.Employee_Status.Archived => "status-closed",
                                            _ => "status-closed"
                                        };
                                    }
                                    <span class="status-badge @statusClass">@emp.Status</span>
                                </td>
                                <td>
                                    @if (emp is NoSQLProject.Models.ServiceDeskEmployee)
                                    {
                                        <span class="role-badge">Service Desk</span>
                                    }
                                    else
                                    {
                                        <span class="type-badge">Employee</span>
                                    }
                                </td>
                                <td>
                                    @if (emp is NoSQLProject.Models.ServiceDeskEmployee)
                                    {
                                        <a asp-action="ManagedEmployees" asp-route-id="@emp.Id" class="btn-add-log">Managed</a>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-edit">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-delete">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>