@model List<Employee>

@{
    ViewData["Title"] = "Employees List";
    var statuses = new[] { "Active", "Deactivated", "Archived" };
    var status = ViewBag.Status?.ToString() ?? "";
}

<h1>Employees</h1>

<form method="get" class="mb-3">
    <label for="status">Filter by Status:</label>
    <select id="status" name="status" onchange="this.form.submit()" class="form-select d-inline w-auto ms-2">
        <option value="" selected="@(string.IsNullOrEmpty(status) ? "selected" : null)">All</option>
        @foreach (var s in statuses)
        {
            <option value="@s" selected="@(status == s ? "selected" : null)">@s</option>
        }
    </select>
</form>

<div class="mb-3">
    <a asp-action="Add" class="btn btn-success">+ Add Employee</a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div id="self-delete-error" class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Management</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Employee employee in Model)
        {
            <tr>
                <th>@employee.FirstName</th>
                <th>@employee.LastName</th>
                <th>@employee.Email</th>
                <th>@(employee is ServiceDeskEmployee ? "Service Desk" : "Employee")</th>
                <th>@employee.Status</th>
                <th>
                    @if (employee is ServiceDeskEmployee sde)
                    {
                        <a asp-action="ManagedEmployees" asp-controller="Employees" asp-route-id="@sde.Id" class="btn btn-info btn-sm">View Managed</a>
                    }
                    else
                    {
                        <span>Not applicable</span>
                    }
                </th>
                <th>
                    <div class="dropdown">
                        <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Actions
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                            </li>
                        </ul>
                    </div>
                </th>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', function () {
            var errorDiv = document.getElementById('self-delete-error');
            if (errorDiv) {
                setTimeout(function () {
                    errorDiv.style.display = 'none';
                }, 5000);
            }
        });
    </script>
}
