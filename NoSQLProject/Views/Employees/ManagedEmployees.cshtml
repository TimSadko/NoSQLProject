@model IEnumerable<NoSQLProject.Models.Employee>
@{
    ViewData["Title"] = "Managed Employees";
}

<partial name="_ErrorMessage" />

<h2>Managed Employees</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No employees managed.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.Email</td>
                <!-- Add more cells as needed -->
            </tr>
        }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-secondary">Back to Employees</a>