@model IEnumerable<NoSQLProject.Models.Employee>

@{
    ViewData["Title"] = "Managed Employees";
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="managed-card shadow-lg">
        <h2 class="managed-title">Managed Employees</h2>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center mt-4 shadow-sm">
                No employees managed yet.
            </div>
        }
        else
        {
            <div class="table-responsive mt-4">
                <table class="table align-middle text-center table-hover">
                    <thead class="table-gradient text-white">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.FirstName</td>
                            <td>@emp.LastName</td>
                            <td>@emp.Email</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-back px-4 py-2">Back to Employees</a>
        </div>
    </div>
</div>
