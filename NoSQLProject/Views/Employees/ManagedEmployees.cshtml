@model IEnumerable<NoSQLProject.Models.Employee>

@{
    ViewData["Title"] = "Managed Employees";
    var serviceDeskId = ViewBag.ServiceDeskId as string ?? "";
    var available = ViewBag.AvailableEmployees as List<NoSQLProject.Models.Employee> ?? new List<NoSQLProject.Models.Employee>();
}

<partial name="_ErrorMessage" />

<div class="fade-in">
    <div class="managed-card shadow-lg">
        <h2 class="managed-title">Managed Employees</h2>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info text-center mt-4 shadow-sm">
                No employees managed yet.
            </div>
        }
        else
        {
            <div class="table-responsive mt-4">
                <table class="table align-middle text-center table-hover">
                    <thead class="table-gradient text-white">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var emp in Model)
                    {
                        <tr>
                            <td>@emp.FirstName</td>
                            <td>@emp.LastName</td>
                            <td>@emp.Email</td>
                            <td>
                                <form asp-action="RemoveManagedEmployee" method="post" class="d-inline">
                                    <input type="hidden" name="serviceDeskId" value="@serviceDeskId" />
                                    <input type="hidden" name="employeeId" value="@emp.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }

        <hr />

        <div class="mt-3">
            <h5>Add an employee to management</h5>
            @if (!available.Any())
            {
                <div class="alert alert-secondary">No available employees to add.</div>
            }
            else
            {
                <form asp-action="AddManagedEmployee" method="post" class="d-flex gap-2 align-items-center">
                    <input type="hidden" name="serviceDeskId" value="@serviceDeskId" />
                    <select name="employeeId" class="form-select" required>
                        <option value="">Select employee</option>
                        @foreach (var e in available)
                        {
                            <option value="@e.Id">@e.FullName (@e.Email)</option>
                        }
                    </select>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            }
        </div>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-back px-4 py-2">Back to Employees</a>
        </div>
    </div>
</div>
