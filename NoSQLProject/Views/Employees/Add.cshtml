@model NoSQLProject.Models.Employee

@{
    ViewData["Title"] = "Add Employee";
}

<div class="fade-in">
    <div class="form-card">
        <h2 class="form-title">Add Employee</h2>

        <form asp-action="Add" method="post">
            <div class="form-group mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control input-style" placeholder="Enter first name" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control input-style" placeholder="Enter last name" />
            </div>

            <div class="form-group mb-3">
                <label for="Role" class="form-label">Role</label>
                <select id="Role" name="Role" class="form-select input-style">
                    <option value="Employee">Employee</option>
                    <option value="ServiceDeskEmployee">Service Desk</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control input-style" placeholder="example@email.com" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">New Password</label>
                <input asp-for="Password" class="form-control input-style" type="password" placeholder="Enter password" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select input-style" asp-items="Html.GetEnumSelectList<NoSQLProject.Models.Employee_Status>()"></select>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-secondary btn-back">Back</a>
                <button type="submit" class="btn btn-add">Add Employee</button>
            </div>
        </form>
    </div>
</div>
