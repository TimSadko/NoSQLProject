@model NoSQLProject.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
    var isServiceDesk = Model.GetType().Name == "ServiceDeskEmployee";
}
<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Role">Role</label>
        <select id="Role" name="Role" class="form-select">
            <option value="Employee" selected="@(isServiceDesk ? null : "selected")">Employee</option>
            <option value="ServiceDeskEmployee" selected="@(isServiceDesk ? "selected" : null)">Service Desk</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" value="" />
        <small class="form-text text-muted">Leave blank to keep the current password.</small>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<NoSQLProject.Models.Employee_Status>()"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

