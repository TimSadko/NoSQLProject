@model NoSQLProject.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
    var isServiceDesk = Model.GetType().Name == "ServiceDeskEmployee";
}
@* 3 CONTROL Z *@
<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group position-relative">
        <label for="Role">Role</label>
        <select id="Role" name="Role" class="form-control pr-5">
            <option value="Employee" selected="@(isServiceDesk ? null : "selected")">Employee</option>
            <option value="ServiceDeskEmployee" selected="@(isServiceDesk ? "selected" : null)">Service Desk</option>
        </select>
        <span class="dropdown-icon">
            <svg style="position:absolute;right:16px;top:50%;transform:translateY(-50%);" width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.085l3.71-3.855a.75.75 0 111.08 1.04l-4.24 4.4a.75.75 0 01-1.08 0l-4.24-4.4a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
        </span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" value="" />
        <small class="form-text text-muted">Leave blank to keep the current password.</small>
    </div>
    <div class="form-group position-relative">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control pr-5" asp-items="Html.GetEnumSelectList<NoSQLProject.Models.Employee_Status>()"></select>
        <span class="dropdown-icon">
            <svg style="position:absolute;right:16px;top:50%;transform:translateY(-50%);" width="20" height="20" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.085l3.71-3.855a.75.75 0 111.08 1.04l-4.24 4.4a.75.75 0 01-1.08 0l-4.24-4.4a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
            </svg>
        </span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .dropdown-icon {
        pointer-events: none;
    }
</style>
