@{
    ViewBag.Title = "Password Reset Successful";
}

<div class="forgot-password-center">
    <div class="forgot-password-card text-center">
        <h2 class="card-title text-success">Password Reset Successful</h2>

        <p class="mb-4">
            Your password has been changed successfully.
        </p>
        <p class="text-muted mb-4">
            You can now log in with your new password.
        </p>

        <a asp-action="Login" asp-controller="Home" class="btn-save" role="button" aria-label="Go to login">
            Go to Login
        </a>
    </div>
</div>