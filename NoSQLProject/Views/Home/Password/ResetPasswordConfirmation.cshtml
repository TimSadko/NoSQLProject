@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="login-container">
    <div class="forgot-password-form">
        <h1 class="text-center" style="color:#4e54c8;margin-bottom:0.5rem;">Password Reset Successful</h1>

        <partial name="_ErrorMessage" />

        <p class="mt-3">Your password has been changed successfully.</p>

        <div class="mt-3">
            <a asp-action="Login" asp-controller="Home" class="btn btn-login w-100" role="button" aria-label="Go to login">
                Go to Login
            </a>
        </div>
    </div>
</div>