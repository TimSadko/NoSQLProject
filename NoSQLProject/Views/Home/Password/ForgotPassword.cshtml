@{
    ViewBag.Title = "Forgot Password";
}
<h2>Forgot Password</h2>
<form asp-action="ForgotPassword" method="post" class="forgot-password-form" novalidate>
    <div class="form-group">
        <label for="email">Email:</label>
        <input id="email" type="email" name="email" class="form-control" required aria-required="true" />
    </div>

    <button type="submit" class="btn reset-btn" aria-label="Send password reset link">
        Send Reset Link
    </button>
</form>
