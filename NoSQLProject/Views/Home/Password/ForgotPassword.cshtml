@{
    ViewBag.Title = "Forgot Password";
}

<div class="login-container">
    <h1>Forgot Password</h1>

    <partial name="_ErrorMessage" />

    <form asp-action="ForgotPassword" method="post" class="forgot-password-form" novalidate>
        <div class="form-group py-2">
            <label for="email">Email</label>
            <input id="email" type="email" name="email"
                   class="form-control"
                   placeholder="Enter your email"
                   required
                   aria-required="true" />
        </div>

        <div class="fade-field">
            <button type="submit" class="btn btn-login w-100 mt-3" aria-label="Send password reset link">
                Send Reset Link
            </button>
        </div>
    </form>
</div>

