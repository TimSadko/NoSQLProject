@model NoSQLProject.ViewModels.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset Password";
}

<div class="forgot-password-center">
    <div class="forgot-password-card">
        <h2 class="card-title">Reset Password</h2>
        <p class="text-center text-muted mb-4">
            Enter your new password below.
        </p>

        <form asp-action="ResetPassword" method="post" novalidate>
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <input type="hidden" name="Token" value="@Model.Token" />

            <div class="form-group mb-4">
                <label for="NewPassword" class="form-label fw-semibold">New Password</label>
                <input id="NewPassword" type="password" name="NewPassword" class="form-control form-control-lg"
                       placeholder="Enter your new password" required aria-required="true" />
            </div>

            <button type="submit" class="btn-save w-100" aria-label="Reset password">
                Reset Password
            </button>
        </form>
    </div>
</div>