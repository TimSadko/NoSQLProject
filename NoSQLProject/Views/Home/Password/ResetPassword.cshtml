@model NoSQLProject.ViewModels.ResetPasswordViewModel

<div class="login-container">
    <div class="forgot-password-form">
        <h1 class="text-center" style="color:#4e54c8;margin-bottom:0.5rem;">Reset Password</h1>

        <partial name="_ErrorMessage" />

        <form asp-action="ResetPassword" method="post" novalidate>
            @Html.AntiForgeryToken()

            <input asp-for="UserId" type="hidden" />
            <input asp-for="Token" type="hidden" />

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid mt-3">
                <button type="submit" class="btn btn-login w-100" aria-label="Reset password">
                    Reset Password
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
