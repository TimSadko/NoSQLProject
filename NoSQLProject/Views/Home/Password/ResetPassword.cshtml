@model NoSQLProject.ViewModels.ResetPasswordViewModel

<h2>Reset Password</h2>

<form asp-action="ResetPassword" method="post" class="forgot-password-form" novalidate>
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <input type="hidden" name="Token" value="@Model.Token" />

    <div class="form-group">
        <label for="NewPassword">New Password:</label>
        <input id="NewPassword" type="password" name="NewPassword" class="form-control" required aria-required="true" />
    </div>

    <button type="submit" class="btn reset-btn" aria-label="Reset password">
        Reset Password
    </button>
</form>
