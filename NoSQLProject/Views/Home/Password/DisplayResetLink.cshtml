@{
    ViewBag.Title = "Password Reset Link";
}

<div class="forgot-password-center">
    <div class="forgot-password-card">
        <h2 class="card-title">Password Reset Link</h2>

        <p class="text-center mb-3">An email would normally be sent to: <strong>@ViewBag.Email</strong></p>
        <p class="text-center text-muted mb-4">For this demo, the reset link is shown below.</p>

        <div class="form-group mb-3">
            <label for="resetLink" class="form-label fw-semibold">Reset Link</label>
            <input id="resetLink" class="form-control" readonly aria-readonly="true" value="@ViewBag.Link" />
        </div>

        <div class="d-flex gap-2 justify-content-center">
            <a href="@ViewBag.Link" class="btn-save" role="button" aria-label="Open password reset link">
                Open Reset Link
            </a>
            <button type="button" class="btn-back" onclick="navigator.clipboard?.writeText(document.getElementById('resetLink').value)" aria-label="Copy reset link">
                Copy Link
            </button>
        </div>
    </div>
</div>