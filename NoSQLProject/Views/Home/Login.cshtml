@model LoginModel

<partial name="_ErrorMessage"/>

<h1>Login</h1>

<form action="/Home/Login" method="post" class="p-4 border rounded shadow-sm">
    <div class="form-group py-2">
        <label for="Email">Email:</label>
        <input type="text" id="Email" name="Email" class="form-control form-control-sm" required value="@Model?.Email" />
    </div>

    <div class="form-group py-2">
        <label for="Password">Password:</label>
        <input type="password" id="Password" name="Password" class="form-control form-control-sm" required value="@Model?.Password" />
    </div>

    <button type="submit" class="btn btn-login w-100 mt-3">Login</button>
</form>
