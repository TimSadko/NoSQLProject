@model LoginModel

@{
    
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <h1>Welcome Back</h1>

    <partial name="_ErrorMessage" />

    <form action="/Home/Login" method="post">
        <div class="form-group py-2 fade-field">
            <label for="Email">Email</label>
            <input type="email" id="Email" name="Email"
                   class="form-control"
                   placeholder="Enter your email"
                   required
                   value="@Model?.Email" />
        </div>

        <div class="form-group py-2 fade-field">
            <label for="Password">Password</label>
            <input type="password" id="Password" name="Password"
                   class="form-control"
                   placeholder="Enter your password"
                   required
                   value="@Model?.Password" />
            <a asp-action="ForgotPassword" asp-controller="Home" class="btn btn-link btn-sm ms-2">Forgot password?</a>

        </div>
    

        <div class="fade-field">
            <button type="submit" class="btn btn-login w-100 mt-3">
                Login 
            </button>
        </div>
    </form>
</div>
